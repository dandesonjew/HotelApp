<div class="row user-form" id="signup-form">
  <div class="col-md-8 col-md-offset-2"> 
  <h1>Add a hotel</h1>
  <p class="text-dark-grey">Please add a hotel using the form</p>
    <%= form_for(@hotel) do |f| %>
      <div class="user-form-box">
        <%= f.label :name, class: "user-form-label"%>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="user-form-box">
        <%= f.label :state, class: "user-form-label" %>
        <%= f.text_field :state, class: 'form-control'  %>
      </div>
      <%= f.submit "Add a Hotel", class: "btn btn-info" %>
    <% end %>
  </div>
</div>